<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

<div class="card testimonial-card">
    <!--Bacground color-->
    <div class="card-up indigo lighten-1">
    </div>
    <!--Avatar-->
    <div class="avatar"><img src="https://orig00.deviantart.net/9224/f/2013/078/0/c/hatsune__miku_square_icon_by_kurisuxgrellsutcliff-d5ymoar.png" class="rounded-circle">
    </div>

    <div class="card-body">
        <!--Name-->
        <h4 class="card-title"><%= user.username %></h4>
        <hr
        <p><%= user.rol %></p>
    </div>

    <div class="card-data indigo">
        <ul>
            <% var tag = user.tag.split(','); %>
            <%  for(var i = 0; i < tag.length ; i++) { %>
                <li class="trigger"><a href="#"><%= tag[i]; %></a></li>
            <% } %>
        </ul>
    </div>
</div>